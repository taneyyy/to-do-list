<div class="container">
    <h1>List</h1>
    
    <%= form_with(model: @item) do |form| %>
    <div class="form-row">
            <div class="form-group col-md-6">
                <%= form.label :name, 'Item Name:' %><br>
                <%= form.text_field :name, class: "form-control" %>
            </div>
    
           <div class="form-group col-md-6">
                <%= form.label :date, 'Due Date (yyyy-mm-dd):' %><br>
                <%= form.text_field :date, class: "form-control" %>
            </div>
            
            <div class= "col">
                 <lable>  </lable>
                 <%= form.submit 'Save Item', class: "btn btn-primary" %>
            </div>
            <br>
    </div>        
       
    <% end %>
    <br>
    <table id="items" class="table table-hover text-center" >
        <thead>
            <tr>
                <th scope="col">To-do Item</th>
                <th scope="col">Due Date</th>
                 <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
               <%= render @items %>
        </tbody>    
    </table>
    
    <%= link_to 'Show completed Items', show_completed_path %>
    <br>    
</div>

