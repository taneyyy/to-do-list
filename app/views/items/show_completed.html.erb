
<%= render 'navbar' %>
<div class="container">
<br>
<h1 class="text-center">Completed To-Do Items</h1>
<br>
<table class="table table-hover text-center">
    <thead class="thead-dark">
    <tr>
        <th>To-do Item</th>
        <th>Due Date</th>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
    <% @items.each do |i| %>
        <tr>
            <td><%= i.name %></td>
            <td><%= i.date %></td>
            <td><%= link_to 'Delete', item_path(i.id), remote: true, class: "badge badge-secondary", method: :delete %></td>
        </tr>
    <% end %>
    </tbody>
</table>
    <div class="row">
         <div class="col-4 "></div>
         <div class="col-4 text-center">
         <div class="btn btn-primary btn-open">
            <%= link_to 'Back to List', items_path, :class => "btn", :style=>'color:#FFFFFF;' %>
         </div>
        </div>
        <div class="col-4"></div>
    </div>
    
</div>
<br>